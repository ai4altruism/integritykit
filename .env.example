# IntegrityKit Environment Variables
# Copy to .env and fill in your values

# ============================================================================
# Required: Slack Configuration
# ============================================================================
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_WORKSPACE_ID=T123456

# Optional: Slack App Token for Socket Mode
SLACK_APP_TOKEN=xapp-your-app-token

# ============================================================================
# Required: OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=sk-your-api-key

# Optional: Anthropic for LLM operations
ANTHROPIC_API_KEY=sk-ant-your-api-key

# ============================================================================
# Database Configuration
# ============================================================================
# MongoDB (defaults work for docker-compose)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=integritykit

# ChromaDB (defaults work for docker-compose)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# ============================================================================
# Application Settings
# ============================================================================
DEBUG=false

# Data retention (days)
DEFAULT_RETENTION_DAYS=90

# Two-person rule for high-stakes overrides
TWO_PERSON_RULE_ENABLED=true
TWO_PERSON_RULE_TIMEOUT_HOURS=24

# Anti-abuse detection
ABUSE_DETECTION_ENABLED=true
ABUSE_OVERRIDE_THRESHOLD=5
ABUSE_OVERRIDE_WINDOW_MINUTES=30
# Optional: Slack channel for abuse alerts
ABUSE_ALERT_SLACK_CHANNEL=

# ============================================================================
# Optional: Monitoring Channels
# ============================================================================
# Comma-separated list of Slack channel IDs to monitor
SLACK_MONITORED_CHANNELS=

# ============================================================================
# Optional: Mongo Express (for docker-compose --profile tools)
# ============================================================================
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin
